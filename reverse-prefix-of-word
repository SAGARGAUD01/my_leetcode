class Solution {
public:
    string reversePrefix(string word, char ch) {
        
       int index = word.find(ch);  //finding ch char
        
    if (index != std::string::npos) { //till index != npos
        
        //reversing the word, till the index exist
        std::reverse(word.begin(), word.begin() + index + 1); 
    }
    return word;
    
    }
};
